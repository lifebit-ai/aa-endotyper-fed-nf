params {
    // Study-specific parameters - to be provided at runtime
    study_id = null
    study_tidy_file = null
    cpeptide_file = null
    
    // Legacy data directory (can still be used for file paths)
    data_dir = "data"
    
    // Container configuration
    default_container = "quay.io/lifebitaiorg/federated-cnn:latest"
}

docker {
    enabled = true
}

process {
    container = params.default_container
}
